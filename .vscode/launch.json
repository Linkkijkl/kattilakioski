{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug backend",
            "cargo": {
                "args": [
                    "build",
                    "--bin=kattilakioski",
                    "--package=kattilakioski"
                ],
                "filter": {
                    "name": "kattilakioski",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "RUST_LOG": "debug"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug backend tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=kattilakioski",
                    "--package=kattilakioski"
                ],
                "filter": {
                    "name": "kattilakioski",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "RUST_LOG": "debug"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "command": "yarn dev",
            "name": "Start frontend development server",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type":"chrome",
            "request":"launch",
            "name":"Attach to Chrome debugger running frontend",
            "url":"http://localhost:4000",
            "webRoot":"${workspaceFolder}/frontend"
        },
        {
            "type":"firefox",
            "request":"launch",
            "name":"Attach to Firefox debugger running frontend",
            "url":"http://localhost:4000",
            "webRoot":"${workspaceFolder}/frontend"
        },
    ]
}